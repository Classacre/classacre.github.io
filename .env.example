# Example environment variables for Legaci

# Database (Postgres)
DATABASE_URL=postgresql://user:password@localhost:5432/legaci

# App / URLs
NEXTAUTH_URL=http://localhost:3000
RP_ID=localhost
RP_NAME=Legaci

# Field encryption key (32 bytes hex). Generate with:
#   openssl rand -hex 32
# Provide a secure value in production (store in KMS).
FIELD_ENCRYPTION_KEY=replace_with_64_hex_chars_generated_by_openssl

# OpenRouter / LLM / embeddings / TTS
OPENROUTER_API_KEY=
# Optional: Some routes (e.g. Whisper STT in sources/ingest) expect OpenAI key
OPENAI_API_KEY=
EMBEDDING_MODEL=voyageai/voyage-2
CHAT_MODEL=anthropic/claude-3.5-sonnet
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# Qdrant / Redis / Object storage
QDRANT_URL=
QDRANT_API_KEY=
QDRANT_COLLECTION=legaci_vectors
REDIS_URL=
# Optional: if using Upstash REST, worker can also read this:
UPSTASH_REDIS_REST_URL=
OBJECT_STORAGE_URL=
 
# OAuth (Google)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Optional override; defaults to NEXTAUTH_URL + /api/auth/oauth/google/callback
GOOGLE_REDIRECT_URI=
 
# Sentry / PostHog (optional)
SENTRY_DSN=
POSTHOG_KEY=